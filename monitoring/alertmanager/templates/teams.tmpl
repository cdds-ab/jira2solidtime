{{ define "teams.critical" }}
{
  "@type": "MessageCard",
  "@context": "https://schema.org/extensions",
  "summary": "üö® Critical Alert: {{ .GroupLabels.alertname }}",
  "themeColor": "d63333",
  "sections": [
    {
      "activityTitle": "üö® CRITICAL ALERT",
      "activitySubtitle": "jira2solidtime monitoring",
      "facts": [
        {
          "name": "Alert",
          "value": "{{ .GroupLabels.alertname }}"
        },
        {{ range .Alerts }}
        {
          "name": "Summary",
          "value": "{{ .Annotations.summary }}"
        },
        {
          "name": "Description",
          "value": "{{ .Annotations.description }}"
        },
        {
          "name": "Status",
          "value": "{{ .Status }}"
        },
        {
          "name": "Started",
          "value": "{{ .StartsAt.Format "2006-01-02 15:04:05" }}"
        }
        {{ end }}
      ]
    }
  ],
  "potentialAction": [
    {
      "@type": "OpenUri",
      "name": "üìä View Dashboard",
      "targets": [
        {
          "os": "default",
          "uri": "http://localhost:3000/d/jira2solidtime"
        }
      ]
    },
    {
      "@type": "OpenUri",
      "name": "üîß Prometheus",
      "targets": [
        {
          "os": "default",
          "uri": "http://localhost:9090"
        }
      ]
    }
  ]
}
{{ end }}

