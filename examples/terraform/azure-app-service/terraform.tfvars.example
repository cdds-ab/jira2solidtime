# Azure Configuration
resource_group_name    = "rg-jira2solidtime"
location               = "westeurope"
environment            = "prod"

# App Service Configuration
app_service_plan_name  = "plan-jira2solidtime"
app_name               = "jira2solidtime-app"  # MUST be globally unique!
sku_name               = "B1"

# Docker Image
docker_image           = "cddsab/jira2solidtime:0.1.0"

# Storage Configuration
storage_account_name   = "stjira2solidtime"  # MUST be globally unique! (lowercase, no hyphens)
data_share_quota_gb    = 5

# Monitoring (optional)
enable_monitoring      = false

# VNet Integration (optional)
enable_vnet_integration = false
